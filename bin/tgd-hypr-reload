#!/bin/sh

# Reload hyprland and various services

HYPR=~/.config/hypr/

reload_init() {
    tgd-wallpaper-wl &!
    eww -c $HYPR/eww daemon
    eww -c $HYPR/eww open top-panel
    eww -c $HYPR/eww open bg-dashboard
}

reload_default() {
    # pkill -f tgd-wallpaper-wl
    pkill swaybg
    
    hyprctl reload

    tgd-wallpaper-wl &!
    sleep 0.5
    eww -c $HYPR/eww reload
}

reload_all() {
    pkill -9 waybar
    pkill eww
    # pkill -f tgd-wallpaper-wl
    pkill swaybg

    hyprctl reload

    tgd-wallpaper-wl &!
    eww -c $HYPR/eww daemon
    eww -c $HYPR/eww open top-panel
    eww -c $HYPR/eww open bg-dashboard
}

reload_default
