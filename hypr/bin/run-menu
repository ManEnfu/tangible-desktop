#!/bin/sh

shopt -s nullglob globstar
set -e

menu="rofi"
config_dir="$HOME/.config/hypr"
theme_dir="$HOME/.config/hypr/rofi-themes"

# Application menu
drun () {
    rofi -show drun -theme "$theme_dir/launcher.rasi"
}

# Run menu
run () {
    rofi -show run -theme "$theme_dir/run.rasi"
}

# choose window
window () {
    win=$(\
        hyprctl -j clients | jq -r 'sort_by(.workspace.name) | .[] | "[" + .workspace.name + "]\t" + .address + "\t" + .title + " - " + .class' | \
        rofi -dmenu -i -p "ì" -theme "$theme_dir/window.rasi")
    win_addr=$(echo "$win" | awk '{ print $2 }')
    hyprctl dispatch focuswindow "address:$win_addr"    
}

# Logout / Power menu
powermenu () {
    up_time=$(uptime)
    username=$(id -un)

    option_sleep="Ì"
    option_reboot="Í"
    option_poweroff="Ã"
    option_lock="Î"
    option_logout="Ï"

    declare -a options=(
        $option_sleep
        $option_reboot
        $option_poweroff
        $option_lock
        $option_logout
    )

    choice=$(\
        printf '%s\n' "${options[@]}" | \
        rofi -dmenu -i -p "$up_time" -theme "$theme_dir/power.rasi")

    if [[ $choice == $option_sleep ]]; then
        i3lock -c 101010 && sleep 0.5 && systemctl suspend
    elif [[ $choice == $option_reboot ]]; then
        systemctl reboot
    elif [[ $choice == $option_poweroff ]]; then
        systemctl poweroff
    elif [[ $choice == $option_lock ]]; then
        swaylock -C $config_dir/swaylock.conf
    elif [[ $choice == $option_logout ]]; then
        if [[ $XDG_SESSION_DESKTOP == "none+awesome" ]]; then 
            awesome-client "awesome.quit()"
        else 
            loginctl kill-user $username
        fi
    fi
}

# pass powered Password Manager
passmenu () {
    typeit=0
    if [[ $1 == "--type" ]]; then
        typeit=1
        shift
    fi

    prefix=${PASSWORD_STORE_DIR-~/.password-store}
    password_files=( "$prefix"/**/*.gpg )
    password_files=( "${password_files[@]#"$prefix"/}" )
    password_files=( "${password_files[@]%.gpg}" )

    password=$(printf '%s\n' "${password_files[@]}" | rofi -dmenu -i -p "聾")

    [[ -n $password ]] || exit

    if [[ $typeit = 0 ]]; then
        PASSWORD_STORE_CLIP_TIME=8 pass show -c "$password" 2>/dev/null && notify-send "Password Manager" "Password for $password copied to clipboard and will be cleared in $PASSWORD_STORE_CLIP_TIME seconds."
    else
        pass show "$password" | { IFS= read -r pass; printf %s "$pass"; } |
            xdotool type --clearmodifiers --file -
    fi
}

keybinds () {
    ~/.config/hypr/bin/parse-keybinds.py | \
        rofi -dmenu -i -p "Æ" -theme "$theme_dir/keybinds.rasi"
}

if [ "$1" = "drun" ]; then
    drun $2
elif [ "$1" = "run" ]; then
    run $2
elif [ "$1" = "power" ]; then
    powermenu
elif [ "$1" = "pass" ]; then
    passmenu
elif [ "$1" = "window" ]; then
    window
elif [ "$1" = "keybinds" ]; then
    keybinds
else
    echo "a"
fi

