#!/bin/sh

sink=$(pactl get-default-sink)

update_widget () {
    sleep 0.02
    [ $XDG_SESSION_DESKTOP = "none+awesome" ] && awesome-client "awesome.emit_signal('signal::volume')"
    [ $XDG_SESSION_DESKTOP = "none+dwm" ] && pkill -RTMIN+10 dwmblocks
    paplay ~/.config/scripts/sound_click_tick.wav
}

if [ $1 = "get" ]; then
    pactl get-sink-volume $sink
    pactl get-sink-mute $sink
elif [ $1 = "raise" ]; then
    pactl set-sink-volume $sink +5%
    # limit to 100%
    pactl get-sink-volume $sink | grep -q -e '1..\%' && \
        pactl set-sink-volume $sink 100%
    update_widget
elif [ $1 = "lower" ]; then
    pactl set-sink-volume $sink -5%
    update_widget
elif [ $1 = "toggle" ]; then
    pactl set-sink-mute $sink toggle
    update_widget
fi
