; Shared values

; Listen to pulse events
(deflisten vol-info "~/.config/hypr/bin/run-single ~/.config/hypr/bin/listen-audio.py")
; Listen to brightness events
(deflisten bri-info "~/.config/hypr/bin/run-single ~/.config/hypr/bin/listen-brightness.py")
; Listen to hyprland events
(deflisten hyprland "~/.config/hypr/bin/run-single ~/.config/hypr/bin/listen-hyprland.py")
; Poll time information
(defpoll time-info :interval "1s" `date '+{
    "hour": "%H",
    "minute": "%M",
    "second": "%S",
    "dow": "%a",
    "dowFull": "%A",
    "date": "%d",
    "month": "%b",
    "monthNum": "%m",
    "monthFull": "%B",
    "year": "%y", 
    "yearFull": "%Y"
}'`)
; Poll notification history
(defpoll notifications :interval "10s" "dunstctl history")
; Poll wifi information
(defpoll wifi-info :interval "2s" "~/.config/hypr/bin/wifi")

(defvar percentage-color '{"color": [
    "#0DA9C8",
    "#55A3BB",
    "#749DAC",
    "#8C979C",
